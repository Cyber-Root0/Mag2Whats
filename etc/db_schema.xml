<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="mag2whats_notification" resource="default" engine="innodb" comment="Notification Table">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Notification ID"/>
        <column xsi:type="varchar" name="state" nullable="false" length="255" comment="Notification State"/>
        <column xsi:type="varchar" name="status" nullable="false" length="255" comment="Notification Status"/>
        <column xsi:type="mediumtext" name="message" nullable="true" comment="Notification Message"/>
        <column xsi:type="tinyint" name="is_active" nullable="false" default="0" comment="Notification Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Notification Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Notification Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <index referenceId="IDX_MAG2WHATS_NOTIFICATION_STATE">
            <column name="state"/>
        </index>

        <index referenceId="IDX_MAG2WHATS_NOTIFICATION_STATUS">
            <column name="status"/>
        </index>
    </table>
</schema>
